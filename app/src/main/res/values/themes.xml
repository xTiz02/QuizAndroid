<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizzoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.QuizzoApp" parent="Base.Theme.QuizzoApp" />

    <style name="Button_disabled">
        <item name="android:background">@drawable/button_disabled</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/light_gray_1</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Button_principal">
        <item name="android:background">@drawable/button_back</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/dark_gray_3</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/number_button_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>