<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/dark_gray_1"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvRank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="4"
                android:textSize="20sp"
                android:textColor="@color/light_gray_1"
                android:gravity="center"
                />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivLeaderBoardProfilePic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_pic"
                android:scaleType="centerCrop"
                android:layout_marginEnd="15dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:gravity="start">
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex"
                    android:textSize="22sp"
                    android:textColor="@color/dark_gray_4"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="start"
                    />
                <TextView
                    android:id="@+id/tvStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C:5   P:3   T:12.5"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:textColor="@color/dark_gray_3"
                    android:gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3456"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingEnd="16dp"
                android:textColor="@color/light_gray_1"
                android:gravity="center"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>