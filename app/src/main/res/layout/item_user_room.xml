<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/dark_gray_1"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <View
                android:id="@+id/status_circle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/green_cricle"
                android:layout_gravity="center"
                android:layout_marginHorizontal="15dp"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPictureProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile_pic"
                android:scaleType="centerCrop"
                android:layout_marginEnd="15dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:gravity="start">
                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex"
                    android:textSize="22sp"
                    android:textColor="@color/dark_gray_3"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="start"
                    />
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hola! me gusta este juego Hola! me gusta este juego"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/light_gray_1"
                    android:gravity="start"
                    />


            </LinearLayout>

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/dark_gray_1"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>